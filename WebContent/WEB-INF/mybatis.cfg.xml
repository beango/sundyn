<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <!-- mybatis别名定义 -->
    <typeAliases>
        <typeAlias alias="AppriesMenu" type="com.sundyn.entity.AppriesMenu"/>
    </typeAliases>
    <environments default="development">
        <environment id="development">
            <transactionManager type="JDBC"/>
            <dataSource type="POOLED">
                <property name="driver" value="com.microsoft.jdbc.sqlserver.SQLServerDriver"/>
                <property name="url" value="jdbc:microsoft:sqlserver://localhost:1433;DatabaseName=zxproduct" />
                <property name="username" value="sa"/>
                <property name="password" value="sa123456."/>
            </dataSource>
        </environment>
    </environments>
    <!-- mybatis的mapper文件，每个xml配置文件对应一个接口 -->
    <mappers>
        <mapper resource="com/sundyn/mapper/AppriesMenuMapper.xml"/>
    </mappers>
</configuration>